apiVersion: apps/v1
kind: Deployment
metadata:
  name: cashgramsvc
  namespace: cashgramsvc
spec:
  replicas: 1
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 2
      maxUnavailable: 1
  selector:
    matchLabels:
      app: cashgramsvc
      version: v1.0.0
  template:
    metadata:
      labels:
        app: cashgramsvc
        version: v1.0.0
        deploymentId: {{DEPLOYMENT_ID}}
    spec:
      imagePullSecrets:
        - name: regsecret
      containers:
        - name: cashgramsvc
          image: docker-registry.cashfree.com/cashgramsvc:latest
          volumeMounts:
            - name: config-volume
              mountPath: /config
          env:
            - name: CASHGRAMSVC_CONFIG
              value: /config/config.yml
            - name: TOKEN_KEY
              valueFrom:
                secretKeyRef:
                  name: cashgramsvc
                  key: tokenkey
            - name: MYSQL_USER
              valueFrom:
                secretKeyRef:
                  name: cashgramsvc
                  key: mysql.username
            - name: MYSQL_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: cashgramsvc
                  key: mysql.password
          resources:
            limits:
              memory: ".5Gi"
              cpu: "700m"
            requests:
              memory: "256Mi"
              cpu: "350m"
          ports:
            - name: app
              containerPort: 9188
      volumes:
        - name: config-volume
          configMap:
            name: cashgramsvc

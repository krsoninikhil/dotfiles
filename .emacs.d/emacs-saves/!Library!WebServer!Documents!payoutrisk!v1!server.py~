from flask import Flask
from flask_restful import Api
from waitress import serve


if __name__ == '__main__':

    STAGE = sys.args[1] if len(sys.argv) > 1 else 'PROD'
    os.environ["STAGE"] = STAGE
    debug = True if STAGE == 'DEVO' else False

    app = Flask(__name__)
    api = Api(app)

    api.add_resource(PayoutRisk, '/risk/<int:account_id>')
    serve(app, host='0.0.0.0', port=8080)

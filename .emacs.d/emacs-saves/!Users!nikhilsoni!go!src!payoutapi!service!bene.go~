package service

import (
	"context"

	"payoutapi/domains"
)

// Bene defines interface for Beneficiary service
type Bene interface {
	Create(c context.Context, p domains.AddBeneRequest) (*domains.PayoutResponse, error)
	CreateGroup(c context.Context, p domains.CreateGroupRequest) (*domains.PayoutResponse, error)
	Show(c context.Context, beneID string) (*domains.PayoutResponse, error)
	GetBeneID(c context.Context, p domains.GetBeneIDRequest) (*domains.PayoutResponse, error)
	Destroy(c context.Context, p domains.RemoveBeneRequest) (*domains.PayoutResponse, error)
}

mod vga_buffer;


#[allow(dead_code)]  // supress warning for unused variants
#[derive(Debug, Clone, Copy, PartialEq, Eq)]  // enable copy semantics
#[repr(u8)]  // store each variant as u8
pub enum Color {
    Black = 0,
    Blue = 1,
    Green = 2,
    Cyan = 3,
    Red = 4,
    Magenta = 5,
    Brown = 6,
    LightGray = 7,
    DarkGray = 8,
    LightBlue = 9,
    LightGreen = 10,
    LightCyan = 11,
    LightRed = 12,
    Pink = 13,
    Yellow = 14,
    White = 15,
}

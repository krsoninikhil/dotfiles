apiVersion: apps/v1
kind: Deployment
metadata:
  name: payoutapi
  namespace: payoutapi
spec:
  replicas: 1
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
  selector:
    matchLabels:
      app: payoutapi
      version: v1.0.0
  template:
    metadata:
      labels:
        app: payoutapi
        version: v1.0.0
        deploymentId: {{DEPLOYMENT_ID}}
    spec:
      imagePullSecrets:
        - name: regsecret
      containers:
        - name: payoutapi
          image: docker-registry.cashfree.com/payoutapi:latest
          volumeMounts:
            - name: config-volume
              mountPath: /config
          env:
            - name: PAYOUTAPI_CONFIG
              value: /config/config.yml
            - name: PAYOUTAPI_RATE_LIMITS
              value: /config/ratelimitconf.yml
          resources:
            limits:
              memory: ".5Gi"
              cpu: "700m"
            requests:
              memory: "256Mi"
              cpu: "350m"
          ports:
            - name: app
              containerPort: 9188
      volumes:
        - name: config-volume
          configMap:
            name: payoutapi

package config

import (
	"fmt"

	"github.com/spf13/viper"
)

type Config struct {
	Debug   bool    `yaml:"debug"`
	Port    string  `yaml:"port"`
	SvcHost svcHost `yaml:"svchost"`
}

type svcHost struct {
	PayoutInternal string `yaml:"payoutinternal"`
}

func LoadConfig(configFile string) *Config {
	config := &Config{}
	viper.SetConfigFile(configFile)
	if err := viper.ReadInConfig(); err != nil {
		panic(fmt.Sprintln("Cannot read config file: %v", err))
	}

	if err := viper.Unmarshal(config); err != nil {
		panic(fmt.Sprintln("Cannot decode config file: %v", err))
	}
	return config
}

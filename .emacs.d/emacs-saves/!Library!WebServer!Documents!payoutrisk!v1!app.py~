import os
from flask import Flask
from flask_restful import Resource, Api
from flask_restful import reqparse

import payouts_risk_mongo_util as mongo_util


class PayoutRisk(Resource):

    def get(self):
        parser = reqparse.RequestParser()
        parser.add_argument('accountId', int, required=True)
        parser.add_argument('cfBeneId', int, required=True)
        args = parser.parse_args()
        print(args)
        return {'msg': 'ok'}

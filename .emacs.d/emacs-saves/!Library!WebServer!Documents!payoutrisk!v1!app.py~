app = Flask(__name__)
api = Api(app)

api.add_resource(PayoutRisk, '/:')

if __name__ == '__main__':
    STAGE = os.environ['STAGE']
    debug = False if STAGE == 'PROD' else True
    app.run(debug=debug)

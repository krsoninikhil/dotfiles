package serviceimpl

import (
	"context"
	"log"
	"payoutapi/domains"
)

type Account struct {
	AccountRepo repo.Account
}

func (a *Account) GetBalance(ctx context.Context) (*domains.PayoutResponse, error) {
	data, err := a.AccountRepo.GetBalance(ctx)
	if err != nil {
		log.Println("serviceimpl.Account#GetBalance", err)
		return createErrorResponse(err), err
	}
	log.Println("serviceimpl.Account#GetBalance repo response:", data)
	res := createSuccessResponse("Ledger balance for the account")
	//res.Data =
	return res
}

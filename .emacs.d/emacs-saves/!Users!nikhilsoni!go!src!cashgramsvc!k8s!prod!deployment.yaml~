apiVersion: apps/v1
kind: Deployment
metadata:
  name: cashgramsvc-gamma
  namespace: cashgramsvc-gamma
spec:
  replicas: 1
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
  selector:
    matchLabels:
      app: cashgramsvc-gamma
      version: v1.0.0
  template:
    metadata:
      labels:
        app: cashgramsvc-gamma
        version: v1.0.0
    spec:
      imagePullSecrets:
        - name: regsecret
      containers:
        - name: cashgramsvc-gamma
          image: docker-registry.cashfree.com/cashgramsvc:0.0.1.2
          volumeMounts:
            - name: config-volume
              mountPath: /config
          env:
            - name: CASHGRAMSVC_CONFIG
              value: /config/config.yml
            - name: TOKEN_KEY
              valueFrom:
                secretKeyRef:
                  name: cashgramsvc-gamma
                  key: tokenkey
            - name: MYSQL_USER
              valueFrom:
                secretKeyRef:
                  name: cashgramsvc-gamma
                  key: mysql.username
            - name: MYSQL_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: cashgramsvc-gamma
                  key: mysql.password
          resources:
            limits:
              memory: ".5Gi"
              cpu: "700m"
            requests:
              memory: "256Mi"
              cpu: "350m"
          ports:
            - name: app
              containerPort: 9188
      volumes:
        - name: config-volume
          configMap:
            name: cashgramsvc-gamma

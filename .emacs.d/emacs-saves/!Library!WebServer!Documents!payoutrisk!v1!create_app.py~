if __name__ == '__main__':

    os.environ["STAGE"] = sys.args[1] if len(sys.argv) > 1 else 'PROD'
    import settings

    debug = True if settings.STAGE == 'DEVO' else False

    app = Flask(__name__)
    api = Api(app)
    api.add_resource(PayoutRisk, '/risk/<int:account_id>')

    app.run(debug=debug)

class YesCardPushUtil {

    public static function transfer($transfer) {
        $response = array("status" => 0, "message" => "Request failed!");
        if (defined("STAGE") && STAGE == "PROD") {
            $url = "https://ssltest.yappay.in/Yappay/direct/push";
        } else {
            $url = "https://sit-secure.yappay.in/Yappay/direct/push";
        }

        $data = array(
            "productId" => "GENERAL",
            "description" => $transfer["remarks"],
            "amount" => $transfer["amount"],
            "recipientPan" => $transfer["cardNumber"],
            "recipientName" => "",
            "txnType" => "YAP",
            "business" => "YAP",
            "transactionOrigin" => "YAP",
            "externalTransactionId" => $transfer["id"],
            "networkType" => strtoupper($transfer["cardScheme"])
        );

);


        global $CONFIG;

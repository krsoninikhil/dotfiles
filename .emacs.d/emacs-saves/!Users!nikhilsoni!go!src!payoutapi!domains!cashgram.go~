package domains

// CreateCashgramRequest defines request format for /createCashgram
type CreateCashgramRequest struct {
	CashgramID     string  `json:"cashgramId" validate:"required,_alphanumus"`
	Amount         float32 `json:"amount" validate:"required,min=1"`
	Name           string  `json:"name" validate:"required,max=100,_alphaspace"`
	Email          string  `json:"email" validate:"omitempty,email,max=200"`
	Phone          string  `json:"phone" validate:"required,numeric,max=11"`
	LinkExpiry     string  `json:"linkExpiry" validate:"required,max=10`
	Remarks        string  `json:"Remarks" validate:"omitempty,_alphanumspace`
	NotifyCustomer string  `json:"notifyCustomer" validate:"omitempty,numeric,max=1`
}

// CashgramIDRequest defines request for /getCashgramStatus and /deactivateCashgram
type CashgramIDRequest struct {
	CashgramID string `json:"cashgramId"`
}

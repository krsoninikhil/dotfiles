package middleware

import (
	"context"
	"payoutapi/domains"
	"payoutapi/logger"

	"github.com/labstack/echo"
	"github.com/segmentio/ksuid"
)

// AddHeaders returns a middleware for capturing the request headers and setting in context
func AddHeaders() echo.MiddlewareFunc {
	return func(next echo.HandlerFunc) echo.HandlerFunc {
		return func(c echo.Context) error {
			reqID := c.Request().Header.Get("X-Request-Id")
			if reqID == "" {
				reqID = ksuid.New().String()
			}
			reqHeader := domains.RequestHeaders{XRequestID: reqID}

			c.Set("RequestHeaders", reqHeader)
			ctx := context.WithValue(c.Request().Context(), domains.ContextKey("RequestHeaders"), reqHeader)
			c.SetRequest(c.Request().WithContext(ctx))

			logger.Info(ctx, "middleware: AddHeaders", "request id added")
			return next(c)
		}
	}
}

apiVersion: apps/v1
kind: Deployment
metadata:
  name: payoutbankvalidationsvc
  namespace: payoutbankvalidationsvc
spec:
  replicas: 1
  strategy:
    type: RollingUpdate
    rollingUpdate: 
      maxSurge: 2
      maxUnavailable: 1
  selector:
    matchLabels:
      app: payoutbankvalidationsvc
      version: v1.0.0
  template:
    metadata:  
      labels:
        app: payoutbankvalidationsvc
        version: v1.0.0
        deploymentId: {{DEPLOYMENT_ID}}
    spec:
      imagePullSecrets:
        - name: regsecret
      containers:
        - name: payoutbankvalidationsvc
          image: docker-registry.cashfree.com/payoutbankvalidationsvc:latest
          volumeMounts:
            - name: config-volume
              mountPath: /config 
          env: 
            - name: PAYOUTBANKVALIDATIONSVCCONF
              value: /config/config.yml
            - name: MONGO_USER
              valueFrom:
                secretKeyRef:
                  name: payoutbankvalidationsvc
                  key: mongo.username
            - name: MONGO_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: payoutbankvalidationsvc
                  key: mongo.password
          resources:
            limits:
              memory: ".5Gi"
              cpu: "700m"
            requests:
              memory: "256Mi"
              cpu: "350m"
          ports:
            - name: app
              containerPort: 9007
      volumes:
        - name: config-volume
          configMap:
            name: payoutbankvalidationsvc
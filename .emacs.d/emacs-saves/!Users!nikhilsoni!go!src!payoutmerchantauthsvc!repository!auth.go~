package repository

import (
	"context"

	"payoutmerchantauthsvc/models"
)

// Repository represent the service's repository contract
type Repository interface {
	Authenticate(context.Context, *models.AuthInput) (*models.AccountDetails, error)
	AccountDetails(string) (*models.AccountDetails, error)
	IsWhiteListedIP(context.Context, *models.AccountDetails, string) bool
}
